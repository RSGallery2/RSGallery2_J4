<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<!-- J3x legacy view => slideshow -->
	<layout title="COM_RSGALLERY2_MENU_VIEW_SLIDESHOW_J3X_TITLE">
		<message>
			<![CDATA[COM_RSGALLERY2_MENU_VIEW_SLIDESHOW_J3X_DESC]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldprefix="Rsgallery2\Component\Rsgallery2\Administrator\Field"
		>
		
			<field
				name="gid"
				type="GallerySelect"
				label="COM_RSGALLERY2_MENU_SELECT_GALLERY_LABEL"
				description="COM_RSGALLERY2_MENU_IMAGES_SELECT_GALLERY_DESC"
				required="true"
				select="true"
				new="true"
				edit="true"
				clear="true"
			/>
			
			<!--field
					name="slides_layout"
					type="componentlayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
					extension="com_rsgallery2"
					view="slideshowJ3x"
					useglobal="true"
			/-->

			<field
					name="slides_layout"
					type="SlideshowSelect"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
					extension="com_rsgallery2"
					required="true"
			/>

		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="params">

			<field
					name="auto_start"
					type="list"
					default="1"
					label="COM_RSGALLERY2_SLIDESHOW_AUTOSTART"
					description="COM_RSGALLERY2_SLIDESHOW_AUTOSTART_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="delay"
				   type="number"
				   default="2500"
				   label="COM_RSGALLERY2_SLIDESHOW_INTERVALL"
				   description="COM_RSGALLERY2_SLIDESHOW_INTERVALL_DESC"
			>
			</field>

			<field name="showArrows"
				   type="list"
				   default="1"
				   label="COM_RSGALLERY2_SLIDESHOW_SHOWARROWS"
				   description="COM_RSGALLERY2_SLIDESHOW_SHOWARROWS_DESC">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>


		</fieldset>
	</fields>
</metadata>
