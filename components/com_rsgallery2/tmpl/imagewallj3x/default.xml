        >

            <field
                    name="id"
                    type="GallerySelect"
                    label="COM_RSGALLERY2_MENU_J3X_SELECT_SINGLE_GALLERY_LABEL"
                    description="COM_RSGALLERY2_MENU_J3X_SELECT_SINGLE_GALLERY_LABEL_DESC"
