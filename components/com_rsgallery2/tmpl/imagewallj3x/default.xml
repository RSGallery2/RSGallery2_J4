				description="COM_RSGALLERY2_LAYOUT_IMG_WALL_DESC"
			>
				<option value="rectangle_borders">COM_RSGALLERY2_LAYOUT_RECTANGLE_BORDER</option>
				<option value="overlapping_flex">COM_RSGALLERY2_LAYOUT_OVERLAPPING_FLEX</option>
				<option value="overlapping_black">COM_RSGALLERY2_LAYOUT_OVERLAPPING_BLACK</option>
			</field>

			<field
				name="max_thumbs_in_images_view_j3x"
				type="number"
				label="COM_RSGALLERY2_IMG_WALL_NUMBER_OF_IMAGES"
				description="COM_RSGALLERY2_IMG_WALL_NUMBER_OF_IMAGES_DESC"
